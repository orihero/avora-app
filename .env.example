# Appwrite Configuration
# Copy this file to .env and fill in your actual values

# Appwrite Server Endpoint
# For cloud: https://cloud.appwrite.io/v1
# For self-hosted: http://your-server-ip/v1
APPWRITE_ENDPOINT=

# Appwrite Project ID
# Found in your Appwrite project settings
APPWRITE_PROJECT_ID=

# Appwrite Platform (optional)
# Options: android, ios, web, windows, macos, linux
APPWRITE_PLATFORM=

# Database Configuration (if using Appwrite Databases)
APPWRITE_DATABASE_ID=

# Collection IDs (if using Appwrite Databases)
# You can add multiple collections as needed
APPWRITE_COLLECTION_ID=

# Storage Configuration (if using Appwrite Storage)
APPWRITE_BUCKET_ID=

# API Key (optional - only needed for server-side operations)
# WARNING: Never expose this in client-side code!
APPWRITE_API_KEY=

# Dev Key (for development - helps avoid IP blocking from excessive requests)
# WARNING: Never expose this in client-side code or commit to version control!
APPWRITE_DEV_KEY=
